<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgBackGroudQuangCao"
        android:layout_width="match_parent"
        android:layout_height="290dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/shape_mau_quangcao" />

    <RelativeLayout
        android:id="@+id/rltLayoutNoiDung"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/imgBackGroudQuangCao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNoiDung"
                android:textSize="15dp"
                android:textColor="#fff"
                android:paddingLeft="15dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"

                android:text="TextView" />

            <Button
                android:id="@+id/btnTraiNghiem"
                android:textColor="#fff"
                android:layout_marginLeft="30dp"
                android:background="@drawable/shape_trainghiemngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRẢI NGHIỆM NGAY" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
