<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:background="@drawable/shape_uudai">

    <ImageView
        android:id="@+id/imgUuDai"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txtNoiDungUuDai"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#03105E"
        android:layout_width="220dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/btnUuDai"
        android:background="@drawable/ipsonshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/uudai" />
</LinearLayout>
