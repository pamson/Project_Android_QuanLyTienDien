<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
   >

    <EditText
        android:layout_marginTop="250dp"
        android:id="@+id/txtTenDNThe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ECE4E4"
        android:textColorHint="#ECE4E4"
        android:textStyle="bold"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="User"/>

    <EditText
        android:id="@+id/txtMKThe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ECE4E4"
        android:textColorHint="#ECE4E4"
        android:textStyle="bold"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Password" />

    <Button
        android:id="@+id/btnDNThe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dangnhapshape"
        android:text="ĐĂNG NHẬP"
        android:textColor="#0C2C7C"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtDangKy"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="Mời bạn đăng nhập thẻ ngân hàng"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        />
</LinearLayout>
